@if (Product != null)
{
    <RadzenCard Style="width: 10rem; height: 15rem; font-size:inherit; padding: 5px; margin-block: 5px; font-size:inherit;">
        <RadzenStack Gap="0" Style="" Orientation="Orientation.Vertical">
            <RadzenImage Path="@Product.Image" Style="max-height: 7rem; height: 7rem;" />
            <RadzenText class="dos-lineas" TextStyle="TextStyle." Style="height: 2.3rem;">@Product.Name</RadzenText>
            <RadzenRow Style="">
                <RadzenColumn Size="6">
                    <RadzenText Style="font-size:x-small;">@Product.Packaging</RadzenText>
                </RadzenColumn>
                <RadzenColumn Size="6">
                    <RadzenText Style="font-size:x-small;">@Product.ReferencePriceString</RadzenText>
                </RadzenColumn>
            </RadzenRow>
            <RadzenText Style="font-weight:bold;">@Product.UnitPriceString</RadzenText>
        </RadzenStack>
    </RadzenCard>
}
@code {
    [Parameter]
    public ProductModel? Product { get; set; }
}
